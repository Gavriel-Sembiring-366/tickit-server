generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  user_id       String        @id @default(uuid()) @db.Uuid
  username      String        @unique
  email         String        @unique
  password      String
  name          String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Film {
  film_id       int           @id
  judul         String?  
  genre         String?  
  durasi        Int?     
  sinopsis      String?  
  sutradara     String?  
  tahun_rilis   Int?     
  umur_rating   String?  
  createdAt     DateTime      @default(now())
}